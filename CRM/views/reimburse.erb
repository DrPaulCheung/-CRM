<link rel="stylesheet" type="text/css" href="css/recruit.css">

<div class = "col-lg-12">
    <div id="reimburse-list" class="smart-widget" ng-app="reimburseApp" ng-controller="layoutController" >
        <div class="smart-widget-header">
            报销申请列表
            <span class="smart-widget-option">
				 <a href="/addReimburse" >
				 	<span class="btn btn-success btn-sm pull-right">
                    	<i class="fa fa-plus"> 新增报销申请</i>
				 	</span>
                </a>
	        </span>
        </div>


		<div id="panelbar-images"></div>
		<div class="project-list" >
	        <table class="table table-hover" >
        		<tbody ng-repeat="recruit in Recruits">
    				<tr>
                        <td class="project-status">
                            <span class="label label-primary">进行中
                        </td>
                        <td class="project-title">
                            <a ng-href="/viewrecruit?id={{recruit._id['$oid']}}">{{recruit.rec_name}}的招聘信息</a>
                            <br/>
                            <small>创建于 {{recruit.rec_createtime}}  </small>
                        </td>
                        <td class="project-people" >
                            <a ng-repeat="people in recruit['rec_manager'] " ng-href="/viewrecruit?id={{recruit._id['$oid']}}"><img alt="image" class="img-circle" ng-src="{{people.user_head}}" title="{{people.user_name}}" ></a>
                        </td>
                        <td class="project-actions">
                            <a ng-href="/viewrecruit?id={{recruit._id['$oid']}}" class="btn btn-default marginTB-xs"><i class="fa fa-folder"></i>  查看 </a>
                            <a href="" class="btn btn-danger marginTB-xs"><i class="fa fa-times-circle m-right-xs"></i> 删除 </a>
                        </td>
                    </tr>

        		</tbody>

	        </table>


		</div>

    </div>
</div>





<script type="text/javascript">
	var reimburseApp = angular.module('reimburseApp', []);
	reimburseApp.controller('layoutController', function($scope, $http) {
	    $http.get("/getrecruit")
	    .success(function(response) {console.log($scope.Recruits = response)});


	});


	angular.bootstrap(document.getElementById("reimburse-list"), ['reimburseApp']);
</script>
