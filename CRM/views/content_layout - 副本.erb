        <div class="top-nav-inner">
          <div class="nav-header">
            <button type="button" class="navbar-toggle pull-left sidebar-toggle" id="sidebarToggleSM">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            
            <ul class="nav-notification pull-right">
              <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog fa-lg"></i></a>
                <span class="badge badge-danger bounceIn">1</span>
                <ul class="dropdown-menu dropdown-sm pull-right">
                  <li class="user-avatar">
                    <% if @user['user_headimg'] %>
                      <% if @user['user_sex'] == "男" %>
                        <img src="img/head/male.png" alt="" class="img-circle">
                      <% else %>
                        <img src="img/head/female.png" alt="" class="img-circle">
                      <% end %>
                    <% else %>
                        <img src="<%= @user.user_headimg %>" alt="" class="img-circle">
                    <% end %>
                    <div class="user-content">
                      <h5 class="no-m-bottom"> <%= @user['user_name'] %> </h5>
                      <div class="m-top-xs">
                        <a href="profile.html" class="m-right-sm">我的信息</a>
